[Unit]
Description=AI News Scraper Web Server
After=network.target

[Service]
Type=simple
User=root
WorkingDirectory=/opt/ai-news-scraper
Environment=PATH=/opt/ai-news-scraper/venv/bin:/usr/bin
EnvironmentFile=/opt/ai-news-scraper/.env
ExecStart=/opt/ai-news-scraper/venv/bin/python main.py serve --host 0.0.0.0 --port 80
Restart=always
RestartSec=10

[Install]
WantedBy=multi-user.target
